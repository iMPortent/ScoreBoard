<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/objective"
            android:textSize="@dimen/cardview_obj"
            android:id="@+id/text_objective"
            android:textAlignment="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cardview_player"
                android:text="@string/null_player"
                android:padding="10sp"
                android:id="@+id/text_player_one"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cardview_vs"
                android:text="@string/vs"
                android:textAlignment="center"
                android:id="@+id/text_vs"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cardview_player"
                android:textAlignment="viewEnd"
                android:text="@string/null_player"
                android:padding="10sp"
                android:id="@+id/text_player_two"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cardview_player"
                android:text="score"
                android:paddingRight="30sp"
                android:id="@+id/text_player_one_score"/>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cardview_player"
                android:textAlignment="viewEnd"
                android:text="score"
                android:paddingLeft="30sp"
                android:id="@+id/text_player_two_score"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--TODO style buttons, clear-->

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="4"
                android:text="+"
                android:id="@+id/add_player_one"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="4"
                android:text="-"
                android:id="@+id/subtract_player_one"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="4"
                android:text="+"
                android:id="@+id/add_player_two"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="4"
                android:text="-"
                android:id="@+id/subtract_player_two"/>
        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>